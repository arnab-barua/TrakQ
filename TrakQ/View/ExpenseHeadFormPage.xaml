<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TrakQ.View.ExpenseHeadFormPage"
             Title="ExpenseHeadFormPage">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Entry Placeholder="Head Name" Text="{Binding CurrentExpenseHead.HeadName}" />
            <Entry Placeholder="Parent Name" Text="{Binding CurrentExpenseHead.ParentName}" />
            <Entry Placeholder="Note" Text="{Binding CurrentExpenseHead.Note}" />
            <Entry Placeholder="Fixed Amount" Keyboard="Numeric" Text="{Binding CurrentExpenseHead.FixedAmount}" />
            <Entry Placeholder="Budget" Keyboard="Numeric" Text="{Binding CurrentExpenseHead.Budget}" />

            <Button Text="Save" Command="{Binding SaveCommand}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>