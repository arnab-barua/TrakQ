<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TrakQ.View.ExpenseHeadPage"
             Title="Expense Head">

    <VerticalStackLayout>
        <Button Text="Create New" Clicked="OnCreateNewClicked" />
        
        <CollectionView ItemsSource="{Binding ExpenseHeads}" Margin="10">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border Padding="10" Margin="5">
                        <VerticalStackLayout>
                            <Label Text="{Binding HeadName}" FontSize="18" FontAttributes="Bold" />
                            <Label Text="{Binding Note}" FontSize="14" />
                            <Label Text="{Binding FixedAmount}" FontSize="14" />
                            <Label Text="{Binding Budget}" FontSize="14" />
                            <Button Text="Edit" CommandParameter="{Binding .}" Clicked="OnEditClicked" />
                        </VerticalStackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>