<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TrakQ.View.IncomeHeadPage"
             Title="Income Head">

    <VerticalStackLayout>
        <Button Text="Create New" Clicked="OnCreateNewClicked" />

        <CollectionView ItemsSource="{Binding IncomeHeads}" Margin="10">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border Padding="10" Margin="5">
                        <HorizontalStackLayout>
                            <VerticalStackLayout>
                                <Label Text="{Binding IncomeHeadName}" FontSize="18" FontAttributes="Bold" />
                                <Label Text="{Binding Note}" FontSize="14" />
                            </VerticalStackLayout>
                            <Button Text="Edit" CommandParameter="{Binding .}" Clicked="OnEditClicked" />
                        </HorizontalStackLayout>                        
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>